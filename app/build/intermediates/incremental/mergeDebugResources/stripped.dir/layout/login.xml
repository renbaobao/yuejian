<?xml version="1.0" encoding="utf-8"?>
                                                       


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bj"

        android:orientation="vertical" android:tag="layout/login_0" xmlns:tools="http://schemas.android.com/tools">

        <ImageView

            android:layout_width="@dimen/d100"
            android:layout_height="@dimen/d100"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/l"
            android:contentDescription="TODO"
            android:scaleType="center" />


        <EditText
            android:id="@+id/userName"
            android:layout_width="200dp"
            android:layout_height="40dp"

            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_background"
            android:hint="用户名手机号"
            android:inputType="textUri"
            android:singleLine="true"
            android:textColor="@color/color_FF545353"
            android:textColorHint="@color/color_FFA49C9C"
            android:textSize="@dimen/s14" />


        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_background"
            android:hint="请输入密码"
            android:imeActionLabel="登录"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/color_FF545353"
            android:textColorHint="@color/color_FFA49C9C"
            android:textSize="@dimen/s14" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/login_button"
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"
                android:background="@drawable/button_shape"
                android:onClick="login"
                android:text="@string/login"
                android:textColor="@color/color_FF545353"
                android:textSize="@dimen/s15" />

            <Button
                android:id="@+id/to_register_button"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"

                android:layout_marginTop="16dp"
                android:background="@drawable/button_shape"
                android:text="注册"
                android:textColor="@color/color_FF545353"
                android:textSize="@dimen/s15" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="第三方登录"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/d50"
                android:layout_height="@dimen/d50"
                android:background="#b33b3b"
                android:src="@drawable/weibo"

                android:layout_marginTop="@dimen/d20"/>

            <ImageView
                android:layout_marginTop="@dimen/d20"
                android:layout_width="@dimen/d50"
                android:layout_height="@dimen/d50"
                android:src="@drawable/qq"
                 android:background="#5465ac"
                android:layout_marginLeft="150dp"/>
            <ImageView
                android:layout_marginTop="@dimen/d20"
                android:layout_width="@dimen/d50"
                android:layout_height="@dimen/d50"
                android:src="@drawable/weixin"
                android:background="#54ac70"
                android:layout_marginLeft="150dp"/>
        </LinearLayout>
    </LinearLayout>
         